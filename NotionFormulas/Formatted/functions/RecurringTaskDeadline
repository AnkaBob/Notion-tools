and(
    #Checking month, day and hour intervals
    or(
        empty(prop("Months intervals")),
        prop("Months intervals") <= dateBetween(now(), FileFunction(getLastTimeDone), "months")
    ),
    or(
        empty(prop("Days intervals")),
        prop("Days intervals") <= FileFunction(getDaysSinceLastDone)
    ),
    or(
        empty(prop("Hours intervals")),
        prop("Hours intervals") <= dateBetween(now(), FileFunction(getLastTimeDone), "hours")
    ),
    if(
        empty(prop("Last skipped time")),
        true,
        prop("Last skipped time") < prop("Configuration database").first().prop("Current day start")
    )
)